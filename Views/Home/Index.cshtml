    </div>
</div>

<!-- İş Ortaklarımız -->
<div class="container mx-auto mt-20 px-4">
    <h2 class="text-3xl font-bold text-gray-800 mb-12 text-center">İş Ortaklarımız</h2>
    
    <div class="grid grid-cols-2 md:grid-cols-5 gap-6">
        @foreach (var firma in Model)
