@model List<VipTransfer.Web.Models.FIRMAModels>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="relative">
    <div class="bg-gradient-to-r from-blue-900 to-blue-700 rounded-xl overflow-hidden">
        <div class="container mx-auto px-6 py-16 relative z-10">
            <div class="text-center md:text-left md:max-w-2xl">
                <h1 class="text-4xl md:text-5xl font-bold text-white leading-tight mb-6">VIP Transfer ile Konforlu Yolculuklar</h1>
                <p class="text-xl text-blue-100 mb-8">Lüks araçlarımız ve profesyonel sürücülerimizle güvenli ve konforlu transfer hizmeti.</p>
                <div class="flex flex-col md:flex-row gap-4 justify-center md:justify-start">
                    <a href="/Rezervasyon/Create" class="bg-white text-blue-900 font-semibold px-6 py-3 rounded-lg hover:bg-blue-50 transition">Hemen Rezervasyon Yap</a>
                    <a href="#services" class="bg-transparent border-2 border-white text-white font-semibold px-6 py-3 rounded-lg hover:bg-white hover:bg-opacity-10 transition">Hizmetlerimiz</a>
                </div>
            </div>
        </div>
        <div class="absolute inset-0 bg-cover bg-center opacity-20" style="background-image: url('https://images.unsplash.com/photo-1511295842340-caf5e716fb8e?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&q=80&w=1080&h=768');"></div>
    </div>
</div>

<!-- Rezervasyon Formu -->
<div class="container mx-auto mt-12 px-4">
    <div class="bg-white rounded-xl shadow-lg p-6 md:p-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Hızlı Rezervasyon</h2>
        
        <form action="/Rezervasyon/Create" method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
                <label for="nereden" class="block text-sm font-medium text-gray-700 mb-2">Nereden</label>
                <input type="text" id="nereden" name="nereden" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
            </div>
            
            <div>
                <label for="nereye" class="block text-sm font-medium text-gray-700 mb-2">Nereye</label>
                <input type="text" id="nereye" name="nereye" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
            </div>
            
            <div>
                <label for="tarih" class="block text-sm font-medium text-gray-700 mb-2">Tarih</label>
                <input type="date" id="tarih" name="tarih" required min="@DateTime.Now.ToString("yyyy-MM-dd")" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
            </div>
            
            <div class="flex items-end">
                <button type="submit" class="w-full bg-blue-700 text-white font-semibold px-4 py-2 rounded-lg hover:bg-blue-800 transition">
                    Rezervasyon Yap
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Hizmetlerimiz -->
<div id="services" class="container mx-auto mt-20 px-4">
    <h2 class="text-3xl font-bold text-gray-800 mb-12 text-center">Hizmetlerimiz</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl shadow-md overflow-hidden transition transform hover:-translate-y-1 hover:shadow-lg">
            <div class="p-6">
                <div class="text-center mb-4">
                    <i class="fas fa-plane text-4xl text-blue-700"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-3 text-center">Havalimanı Transferi</h3>
                <p class="text-gray-600">Havalimanından otel veya evinize konforlu bir yolculuk için profesyonel transfer hizmetimizi tercih edin.</p>
            </div>
        </div>
        
        <div class="bg-white rounded-xl shadow-md overflow-hidden transition transform hover:-translate-y-1 hover:shadow-lg">
            <div class="p-6">
                <div class="text-center mb-4">
                    <i class="fas fa-hotel text-4xl text-blue-700"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-3 text-center">Otel Transferi</h3>
                <p class="text-gray-600">Otelinizden varış noktanıza zamanında ve konforlu şekilde ulaşmanızı sağlıyoruz.</p>
            </div>
        </div>
        
        <div class="bg-white rounded-xl shadow-md overflow-hidden transition transform hover:-translate-y-1 hover:shadow-lg">
            <div class="p-6">
                <div class="text-center mb-4">
                    <i class="fas fa-car text-4xl text-blue-700"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-3 text-center">VIP Taşımacılık</h3>
                <p class="text-gray-600">Lüks araç filomuzu özel günler, iş toplantıları ve özel organizasyonlar için kiralayabilirsiniz.</p>
            </div>
        </div>
    </div>
</div>

<!-- Araç Filosu -->
